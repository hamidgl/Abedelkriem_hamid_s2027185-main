<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TRAFFIC SCOTLAND"
                android:textSize="26sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                />
                    <Button
                        android:id="@+id/displayAllButton"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:backgroundTint="@android:color/holo_blue_light"
                        android:text="Press to display all roadworks data" />


                    <TextView
                        android:id="@+id/roadWorkTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Find roadwork by road name"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/roadWorkInput"
                            android:layout_width="295dp"
                            android:layout_height="match_parent"
                            android:hint="Enter road name"
                            android:inputType="text" />

                        <Button
                            android:id="@+id/searchByKeyWordButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/design_default_color_error"
                            android:text="Search" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Find roadwork by date"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/roadWorkByDateInput"
                            android:layout_width="295dp"
                            android:layout_height="match_parent"
                            android:hint="dd/MM/yyyy"
                            android:inputType="date" />

                        <Button
                            android:id="@+id/searchByDateButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/holo_orange_light"
                            android:text="Search" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Find planning journey roadwork by date"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/planningJourneyDateInput"
                            android:layout_width="295dp"
                            android:layout_height="match_parent"
                            android:hint="dd/MM/yyyy"
                            android:inputType="date" />

                        <Button
                            android:id="@+id/planningJourneyDateButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/holo_green_light"
                            android:text="Search" />

                    </LinearLayout>

            <Button
                android:id="@+id/currentIncidenButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="Press to find current Incident" />

                    <!-- Display area -->
                    <TextView
                        android:id="@+id/channelTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/channelDesc"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="15sp" />

                    <ExpandableListView
                        android:id="@+id/expandableListView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#dce549"></ExpandableListView>

        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

